{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "io.timesheets",
  "version": "../package.json",
  "identifier": "com.iofinnet.internal.timesheets",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "io.timesheets",
        "width": 800,
        "height": 600,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 20,
          "y": 20
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "resources": ["icons/tray.png"],
    "createUpdaterArtifacts": true,
    "macOS": {
      "minimumSystemVersion": "15.0"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["com.iofinnet.internal.timesheets"]
      }
    },
    "sql": {
      "preload": ["sqlite:db.sqlite"]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDMyMjU5NjU0QjRDODk5ODgKUldTSW1jaTBWSllsTXFmdmJtb0RGeTlMc09pdXNuOEN2RW5JSW5HZEU3UnlSZGQxWEJaclN4bVoK",
      "endpoints": ["https://github.com/IoFinnet/internal-timesheets-app/releases/latest/download/latest.json"]
    }
  }
}
